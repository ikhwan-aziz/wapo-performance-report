<!-- Menambahkan skrip pdfmake -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.68/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.68/vfs_fonts.js"></script>

<!-- Menambahkan skrip untuk menangani pencetakan PDF -->
<script>
    function printTable() {
        // Mendefinisikan data tabel
        const tableData = [
            ['ID.', 'Tgl Terima', 'Kode Teknisi', 'Job Type', 'No. Model', 'Caliber', 'Point'],
            // Menambahkan data dari hasil pencarian
            <% 
                let totalPoint = 0;
                data.forEach((element) => { 
                    totalPoint += parseInt(element.point);
            %>
                [
                    '<%= element._id %>', 
                    '<%= element.tgl_trm %>', 
                    '<%= element.kod_tech %>', 
                    '<%= element.job_typ %>', 
                    '<%= element.no_model %>', 
                    '<%= element.cal %>', 
                    '<%= element.point %>'
                ],
            <% }); %>
        ];

        // Membuat dokumen PDF menggunakan pdfmake
        const docDefinition = {
            content: [
                { text: 'Performance Report ' + '<%= data.length > 0 ? data[0].kod_tech : "" %>', style: 'header' },
                { text: 'Tanggal Cetak: ' + new Date().toLocaleDateString(), style: 'subheader' },
                { text: 'Total Point Diperoleh: ' + '<%= totalPoint %>', style: 'subheader' }, // Menggunakan template EJS di sini
                {
                    style: 'tableExample',
                    table: {
                        headerRows: 1,
                        body: tableData,
                    },
                },
            ],
            styles: {
                header: { fontSize: 18, bold: true },
                subheader: { fontSize: 14, bold: false, margin: [0, 10, 0, 5] },
                tableExample: { margin: [0, 5, 0, 15] },
            },
        };

        // Mencetak dokumen PDF
        pdfMake.createPdf(docDefinition).open();
    }
</script>
